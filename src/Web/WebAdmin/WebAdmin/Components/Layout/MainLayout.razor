@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader Class="siteheader">
        <FluentStack HorizontalAlignment="HorizontalAlignment.Start">
            <span>DaprTool-Solution</span>
        </FluentStack>
        <FluentSpacer />
        <FluentStack HorizontalAlignment="HorizontalAlignment.End">
            <MainSearch/>
            <CultureSelector/>
            <SiteLinks/>
            <SiteSettings />
            <UserProfile/>
        </FluentStack>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
        
        
        <FluentToastProvider />
        <FluentDialogProvider />
        <FluentTooltipProvider />
        <FluentMessageBarProvider />
    </FluentStack>
    <FluentFooter>
        <a href="https://github.com/iamshen" target="_blank">github</a>
        <FluentSpacer />
        <a href="/" target="_blank">Copyright Ⓒ 2024 DaprTool-Solution</a>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>